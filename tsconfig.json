{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2021",
		"lib": ["es2021"],
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false,
		"removeComments": false,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"inlineSourceMap": false,
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true
	},
	"exclude": ["node_modules"]
}